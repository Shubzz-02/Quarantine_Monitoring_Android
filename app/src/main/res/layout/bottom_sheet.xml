<?xml version="1.0" encoding="utf-8"?>
<com.allattentionhere.fabulousfilter.AAH_FilterView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/filtersfab"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_add_pers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@android:color/white"
            android:drawableStart="@drawable/ic_add_48px"
            android:drawablePadding="@dimen/dp_32"
            android:drawableTint="@color/gray"
            android:gravity="start|center_vertical"
            android:text="Add Person Details"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <View
            android:id="@+id/sep_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_add_pers"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/md_bottom_sheet_separator_top_margin"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/gray" />

        <com.amar.library.ui.StickyScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/person_name_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/sep_bar"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/dp_32"
                    android:drawableTint="@color/gray"
                    android:focusedByDefault="false"
                    android:gravity="start|center_vertical"
                    android:hint="Person name"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/f_name_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/dp_32"
                    android:drawableTint="@color/gray"
                    android:gravity="start|center_vertical"
                    android:hint="Father name"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/age_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/dp_32"
                    android:drawableTint="@color/gray"
                    android:gravity="start|center_vertical"
                    android:hint="Age"
                    android:inputType="number"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/gender_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/dp_32"
                    android:drawableTint="@color/gray"
                    android:gravity="start|center_vertical"
                    android:hint="Gender (Male/Female)"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/pmno_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/dp_32"
                    android:drawableTint="@color/gray"
                    android:gravity="start|center_vertical"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/cfrom_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/dp_32"
                    android:drawableTint="@color/gray"
                    android:gravity="start|center_vertical"
                    android:hint="Coming  From"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/rdate_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="@dimen/dp_32"
                    android:drawableTint="@color/gray"
                    android:gravity="start|center_vertical"
                    android:hint="Reaching Date (YYY-MM-DD)"
                    android:inputType="date"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/md_bottom_sheet_separator_top_margin"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="@dimen/dp_8" />
            </LinearLayout>
        </com.amar.library.ui.StickyScrollView>

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/imgbtn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/states_fab_button"
                android:src="@drawable/cancel"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/imgbtn_apply"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@drawable/states_fab_button"
                android:src="@drawable/done"
                android:tint="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>
</com.allattentionhere.fabulousfilter.AAH_FilterView>


